# Ubuntu Post Installation

# !/bin/bash

sudo apt update
sudo apt install wget -y
sudo apt install wget curl unzip -y
sudo apt install git -y

#customization
sudo apt install gnome-shell-extension-manager -y
sudo apt install gnome-shell-extensions -y
sudo apt install gnome-tweaks -y


#Installing flatbak

sudo apt update
sudo apt install flatpak -y
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo;


#Install Htop, Neofetch ....
sudo apt install htop -y
sudo apt install neofetch -y
sudo apt install vim -y
sudo apt install vlc -y
sudo apt install bashtop -y


#install some SytemClean
sudo apt install stacer -y

#timshift/system backup
sudo apt update
sudo apt upgrade -y
sudo apt install timeshift -y


#Install Spotify
sudo apt update
flatpak install flathub com.spotify.Client -y

#Install discord
sudo apt update
flatpak install flathub com.discordapp.Discord -y

sudo apt-get install nvme-cli -y
# //sudo nvme smart-log /dev/nvme0n1

# Install Intelij/vscode.deb
flatpak install flathub com.jetbrains.IntelliJ-IDEA-Ultimate -y

wget https://az764295.vo.msecnd.net/stable/b7886d7461186a5eac768481578c1d7ca80e2d21/code_1.77.1-1680651665_amd64.deb

#Postman
flatpak install flathub com.getpostman.Postman -y


#password manager
sudo add-apt-repository ppa:phoerious/keepassxc -y
sudo apt update
sudo apt install keepassxc -y


# install ollama AI in local
curl -fsSL https://ollama.com/install.sh | sh
ollama --version
ollama serve


# Install Node.js and npm (latest LTS version)
curl -fsSL https://deb.nodesource.com/setup_lts.x | sudo -E bash -
sudo apt install nodejs -y
node -v
npm -v


# games
flatpak install flathub org.supertuxproject.SuperTux -y

# optional
sudo apt install net-tools
sudo apt-get install ssh
sudo apt install cmake
sudo apt install build-essential libssl-dev


nautilus -q
sudo apt install nautilus-admin -y

sudo add-apt-repository ppa:costales/folder-color
sudo apt-get update
sudo apt-get install folder-color -y
sudo apt install imagemagick nautilus-image-converter -y
sudo apt install gnome-sushi -y
# sudo apt install nautilus-wipe -y


# installing VMware for 30 days free trail
